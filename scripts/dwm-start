#!/bin/sh
#
# Custom dwm startup script.
#
# Author: Dimitris Gerasimou <https://github.com/dimgerasimou>
#

# Start picom
/usr/bin/picom -b

# Start dwmblocks
/usr/local/bin/dwmblocks &

# Multi monitor setup
(sleep 0.2 && (xrandr --output HDMI-0 --auto --right-of eDP-1-1)) &

# Start easyeffects for equalizer
(sleep 0.2 && (nohup easyeffects --gapplication-service &)) &

# Set Wallpaper
(sleep 0.2 && (feh --bg-fill $HOME/Pictures/Background.png)) &

# Start dwm
/usr/local/bin/dwm
