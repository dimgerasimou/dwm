#!/bin/sh
#
# Custom dwm startup script.
#
# Author: Dimitris Gerasimou <https://github.com/dimgerasimou>
#

# Set Wallpaper
feh --bg-fill $HOME/Pictures/purple_sky.jpg

# Start dwmblocks
/usr/local/bin/dwmblocks &

# Multi monitor setup
(sleep 1 && (xrandr --output HDMI-0 --auto --right-of eDP-1-1)) &

# Start dwm
/usr/local/bin/dwm
